Makefile: $(srcdir)/Makefile.in $(srcdir)/configure
	(cd $(srcdir) ; \
		./configure +destdir=$(destdir) \
		+norecurse \
		`if [ "$(srcdir)" != "." ] ; then echo +f; fi` \
		$(host) +target=$(target))

