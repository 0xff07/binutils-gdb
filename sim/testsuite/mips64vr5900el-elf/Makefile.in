# Rules for running all the tests, put into three types
# exit success, exit fail, print "Hello World"

.u.log:
	uudecode $*.u
	$(RUN_FOR_TARGET) $* > $*.log


# Rules for running the tests

.SUFFIXES: .u .ok .tx59 .hi .ko
.tx59.ok:
	rm -f tmp-$* $*.hi
	ulimit -t 5 ; $(RUN_FOR_TARGET) $*.tx59 > tmp-$*
	mv tmp-$* $*.ok
.tx59.hi:
	rm -f tmp-$* $*.hi diff-$*
	ulimit -t 5 ; $(RUN_FOR_TARGET) $*.tx59 > tmp-$*
	echo "Hello World" | diff - tmp-$* > diff-$*
	cat tmp-$* diff-$* > $*.hi
.tx59.ko:
	rm -f tmp-$* $*.ko
	set +e ; \
	ulimit -t 5 ; $(RUN_FOR_TARGET) $*.tx59 > tmp-$* ; \
	if [ $$? -eq 47 ] ; then \
	  exit 0 ; \
	else \
	  exit 1 ; \
	fi
	mv tmp-$* $*.ko


# Rules for building all the tests and packing them into
# uuencoded files.


.SUFFIXES: .u .S .tx59
.S.u:
	rm -f $*.o $*.tx59
	$(AS_FOR_TARGET) $(srcdir)/$*.S -o $*.o
	$(LD_FOR_TARGET) -o $* $*.o
	uuencode < $* $* > $*.u
	rm -f $*.o $*
.S.tx59:
	rm -f $*.o $*.tx59
	$(AS_FOR_TARGET) $(srcdir)/$*.S -o $*.o
	$(LD_FOR_TARGET) -o $*.tx59 $*.o
	rm -f $*.o $*



